<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heapot.qianxun"
    android:versionCode="1"
    android:versionName="1.1">
    <!--相机权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".application.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--启动引导页-->
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主页-->
        <activity android:name=".activity.MainActivity"></activity>
        <!--订阅提交页面-->
        <activity android:name=".activity.Subscription"></activity>
        <!--通知界面-->
        <activity android:name=".activity.NotificationActivity"></activity>
        <!--个人主页-->
        <activity android:name=".activity.PersonalActivity"></activity>
        <!--个人信息设置页面-->
        <activity android:name=".activity.PersonalInforActivity"></activity>
        <!--修改名字签名界面-->
        <activity android:name=".activity.PersonInfoAlterActivity"></activity>
        <!--搜索界面-->
        <activity android:name=".activity.SearchActivity"></activity>
        <!--创建文章、简历页面-->
        <activity android:name=".activity.CreateActivity"></activity>
        <!--Login-->
        <activity android:name=".activity.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"></activity>
        <!--设置界面-->
        <activity android:name=".activity.SystemSettingActivity"></activity>
        <!--帮助界面-->
        <activity android:name=".activity.SystemHelpActivity"></activity>
        <!--注册界面-->
        <activity android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"></activity>
        <!--基类-->
        <activity android:name=".activity.BaseActivity"></activity>
        <!--创建文章，软键盘设置-->
        <activity
            android:name=".activity.CreateArticleActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"></activity>
        <!--自动更新服务-->
        <service android:name=".service.UpdateService"></service>
        <!--文章详情-->
        <activity android:name=".activity.ArticleActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"></activity>
        <!--管理员登陆页面-->
        <activity android:name=".activity.AdminLoginActivity"></activity>
        <!--关于我们-->
        <activity android:name=".activity.SystemAboutUs"></activity>
        <!--用户使用帮助-->
        <activity android:name=".activity.SystemUserHelpActivity"></activity>
        <!--修改密码-->
        <activity android:name=".activity.SystemChangePassword"></activity>
        <!--对广播接收器进行注册-->
        <receiver android:name=".broadcast.RefreshReceiver">
            <intent-filter>
                <action android:name="com.karl.refresh"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>