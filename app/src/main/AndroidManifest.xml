<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heapot.qianxun">
     <!--相机权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--订阅提交页面-->
        <activity android:name=".activity.Subscription"></activity>
        <!--通知界面-->
        <activity android:name=".activity.NotificationActivity"></activity>
        <!--个人主页-->
        <activity android:name=".activity.PersonalActivity"></activity>
        <!--个人信息设置页面-->
        <activity android:name=".activity.PersonalInforActivity"></activity>
        <!--修改名字签名界面-->
        <activity android:name=".activity.PersonInfoAlterActivity"></activity>
        <!--搜索界面-->
        <activity android:name=".activity.SearchActivity"></activity>
        <!--创建文章、简历页面-->
        <activity android:name=".activity.CreateActivity"></activity>
    </application>

</manifest>