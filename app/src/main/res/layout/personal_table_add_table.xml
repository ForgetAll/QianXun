<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_changeTabAdd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D3D3"
    android:orientation="vertical"
    android:layout_marginRight="60dp"
    android:layout_marginLeft="60dp"
    android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_tabTitleAdd"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:text="新建栏目"
            android:textSize="18sp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_changeTitleAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请输入栏目名称："
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <EditText
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_changeTitleAdd"
            android:id="@+id/et_currentTabAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新闻"
            android:textSize="16sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_sureAdd"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="确定"
            android:layout_marginLeft="40dp"/>
        <Button
            android:id="@+id/btn_cancelAdd"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="取消"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>



</LinearLayout>