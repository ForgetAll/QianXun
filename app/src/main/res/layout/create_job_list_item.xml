<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_company1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:src="@drawable/imagetest" />

        <TextView
            android:id="@+id/tv_company1Title"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/iv_company1"
            android:text="公司1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_company1Content"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@+id/tv_company1Title"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/iv_company1"
            android:text="课程将发布在选择的分类之下"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_company1Choose"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:text="已选" />
    </RelativeLayout>

</LinearLayout>