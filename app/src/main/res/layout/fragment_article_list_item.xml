<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102.5dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">
    <ImageView
        android:id="@+id/txt_item_article_icon"
        android:layout_width="102dp"
        android:layout_height="76.5dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/txt_item_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_item_article_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="17sp"
        android:textColor="#333"
        android:text="文章列表"/>
    <TextView
        android:id="@+id/txt_item_article_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_below="@+id/txt_item_article_title"
        android:layout_toLeftOf="@+id/txt_item_article_icon"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:textColor="#666"
        android:text="提示信息"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>