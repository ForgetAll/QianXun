<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="登录，畅所欲言"
            android:textSize="20sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="人生怎能无态度"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="回到仟询，抒发，不再压抑"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/linearlayout_login_register_shape"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="5dp">
            <EditText
                android:id="@+id/edt_login_phone"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#E8EDEC"
                android:hint="请输入账号"
                android:textColorHint="#2B6151"
                android:inputType="text"/>
            <TextView
                android:id="@+id/txt_remove_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="清空"
                android:textColor="#2B6151"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#E8EDEC"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingLeft="5dp">
            <EditText
                android:id="@+id/edt_login_password"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="5"
                android:hint="请输入密码"
                android:background="@drawable/linearlayout_login_register_shape"
                android:textColorHint="#2B6151"
                android:inputType="textPassword"/>
            <TextView
                android:id="@+id/txt_show_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:text="显示密码"
                android:textColor="#2B6151"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login__register_shape"
            android:elevation="5dp"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="20sp"
            android:padding="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp">
            <TextView
                android:id="@+id/txt_login_to_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="注册"
                android:textSize="16sp"
                android:textColor="#2B6151"/>
            <TextView
                android:id="@+id/txt_reset_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:gravity="end"
                android:text="忘记密码？"
                android:textSize="16sp"
                android:textColor="#2B6151"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_look"
                android:layout_marginTop="45dp"
                android:layout_marginRight="60dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随便看看"
                android:textSize="16sp"
                android:padding="5dp"
                android:visibility="gone"/>
        </RelativeLayout>


    </LinearLayout>

</ScrollView>