<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0000ff">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/bye" />

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_image"
                    android:background="@null"
                    android:hint="请在此处键入标题" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_company"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/imagetest" />

                <TextView
                    android:id="@+id/tv_companyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/iv_company"
                    android:text="请选择招聘单位"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_companyContent"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/tv_companyTitle"
                    android:layout_marginBottom="12dp"
                    android:layout_toRightOf="@+id/iv_company"
                    android:text="职位将发布在选择的公司之下"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_companyChoose"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:text="两个已选" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_jobList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_company2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/imagetest" />

                <TextView
                    android:id="@+id/tv_company2Title"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/iv_company2"
                    android:text="公司1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_company2Content"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/tv_company2Title"
                    android:layout_marginBottom="12dp"
                    android:layout_toRightOf="@+id/iv_company2"
                    android:text="课程将发布在选择的分类之下"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_company2Choose"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:text="未选" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_job"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/imagetest" />

                <TextView
                    android:id="@+id/tv_jobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/iv_job"
                    android:text="请选择职位的大类"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_jobContent"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/tv_jobTitle"
                    android:layout_marginBottom="12dp"
                    android:layout_toRightOf="@+id/iv_job"
                    android:text="职位根据选择出现在不同的模块之下"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jobChoose"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:text="单选" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_detail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/imagetest" />

                <TextView
                    android:id="@+id/tv_detailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/iv_detail"
                    android:text="请设定详细职位"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_detailContent"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/tv_detailTitle"
                    android:layout_marginBottom="12dp"
                    android:layout_toRightOf="@+id/iv_detail"
                    android:text="辅助精确搜索"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_detailChoose"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:text="可多选" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_describe"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/imagetest" />

                <TextView
                    android:id="@+id/tv_describeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/iv_describe"
                    android:text="职位描述"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_describeContent"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@+id/tv_describeTitle"
                    android:layout_marginBottom="12dp"
                    android:layout_toRightOf="@+id/iv_describe"
                    android:text="请在此处详细描述此职位"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_describeChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back_24_black" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>