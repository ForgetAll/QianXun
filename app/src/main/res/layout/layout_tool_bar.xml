<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_tool_bar"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:layout_collapseMode="pin">
    <TextView
        android:id="@+id/txt_first_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="主标题"
        android:textColor="@color/color_first"
        android:textSize="@dimen/text_size_first"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_second_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_third"
            android:textColor="@color/color_second"
            android:text="副标题"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:src="@drawable/ic_search_white_24dp"/>
        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:src="@drawable/ic_star_border_white_24dp"/>
        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:src="@drawable/ic_notifications_white_24dp"/>


    </LinearLayout>
</android.support.v7.widget.Toolbar>